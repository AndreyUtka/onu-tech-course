@model DataTable
@using System.Data;
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div>
    <h3>Читатели</h3>
    <br />

    <table>
        <thead>
            <tr>
                @foreach (DataColumn col in Model.Columns)
                {
                    <th>@col.ColumnName</th>
                }
                <th> Выдать книгу/Забрать книгу </th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                        <td>@row[col.ColumnName]</td>
                    }
                    <td>
                        @Html.ActionLink("Выдать книгу/Забрать книгу", "GiveOrTakeBook", "Home", new { Id = @row[0] }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
